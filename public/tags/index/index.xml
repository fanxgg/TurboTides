 .case-timeline {
 position: relative;
 max-width: 1200px;
 margin: 0 auto;
 padding: 40px 0;
 min-height: 680px;
 display: flex;
 flex-direction: column;
 justify-content: space-between;
 }
 
 .case-timeline::before {
 content: '';
 position: absolute;
 height: 100%;
 width: 4px;
 background: linear-gradient(180deg, #3b82f6 0%, #4472c4 100%);
 left: 50%;
 transform: translateX(-50%);
 z-index: 0;
 }
 
 
 .timeline-node:nth-child(1) {
 top: 5%; 
 }

 .timeline-node:nth-child(2) {
 top: 30%; 
 }

 .timeline-node:nth-child(3) {
 top: 55%; 
 }

 .timeline-node:nth-child(4) {
 top: 80%; 
 }

 .timeline-node {
 position: relative;
 margin: 0;
 height: 140px;
 display: flex;
 justify-content: center;
 align-items: center;
 }
 
 .timeline-node:nth-child(odd) .timeline-content {
 left: 55%;
 top: 0;
 }
 
 .timeline-node:nth-child(even) .timeline-content {
 right: 55%;
 top: 0;
 }
 
 .timeline-content {
 background: white;
 border-radius: 10px;
 box-shadow: 0 4px 16px rgba(0,0,0,0.1);
 padding: 25px;
 width: 40%;
 position: absolute;
 transition: transform 0.3s, box-shadow 0.3s;
 z-index: 1;
 min-height: 140px;
 }
 
 .timeline-content:hover {
 transform: translateY(-5px);
 box-shadow: 0 10px 25px rgba(0,0,0,0.15);
 }
 
 .timeline-dot {
 width: 28px;
 height: 28px;
 border-radius: 50%;
 background: #4472c4;
 border: 4px solid white;
 box-shadow: 0 2px 5px rgba(0,0,0,0.2);
 position: absolute;
 top: 50%;
 left: 50%;
 transform: translate(-50%, -50%);
 z-index: 2;
 }
 
 .timeline-title {
 color: #333;
 font-size: 1.5rem;
 font-weight: bold;
 margin-bottom: 10px;
 }
 
 .timeline-count {
 color: #777;
 font-size: 1rem;
 margin-bottom: 15px;
 }
 
 .timeline-btn {
 display: inline-block;
 padding: 8px 16px;
 background-color: #4472c4;
 color: white;
 border-radius: 5px;
 text-decoration: none;
 font-weight: 500;
 transition: background-color 0.3s;
 }
 
 .timeline-btn:hover {
 background-color: #365899;
 }
 
 @media (max-width: 768px) {
 .case-timeline {
 min-height: 780px; 
 padding-left: 30px; 
 }
 .case-timeline::before {
 left: 30px;
 }
 
 .timeline-node {
 justify-content: flex-start;
 margin: 0;
 min-height: 150px;
 }

 
 .timeline-node:nth-child(1) { top: 5%; }
 .timeline-node:nth-child(2) { top: 28%; }
 .timeline-node:nth-child(3) { top: 51%; }
 .timeline-node:nth-child(4) { top: 74%; }
 
 .timeline-node:nth-child(odd) .timeline-content,
 .timeline-node:nth-child(even) .timeline-content {
 left: 50px;
 right: auto;
 width: calc(100% - 80px);
 position: relative; 
 top: 0;
 }
 
 .timeline-dot {
 left: 0;
 }
 }
 &lt;/style>
 
